@model BookClub.Web.Models.BookEditViewModel
@{
    ViewData["Title"] = "Edit";
}



<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-center">
                <h1>Add a book to your library</h1>
            </div>
        </div>
    </div>
    <hr />
    <div class="row">
       <div class="col-12">
           <div class="d-flex justify-content-center">

               @using (@Html.BeginForm("Edit", "Books", FormMethod.Post, new { @class = "form w-50", role = "form" }))
               {
                   @Html.AntiForgeryToken()


                   <div class="form-group">
                       <label>Title</label>
                       @Html.TextBoxFor(x => x.Title, new { @class = "form-control", placeholder = "Enter book title"})
                   </div>

                   <div class="form-group">
                       <label>Description</label>
                       @Html.TextAreaFor(x => x.Description, new { @class = "form-control", placeholder = "Enter book description" })
                   </div>

                   <div class="form-group">
                       <label>Genre</label>
                       @Html.DropDownListFor(x => x.GenreId, Model.Genres, "Please select a genre", new { @class = "form-control"})
                   </div>

                   <div class="form-group">
                       <label>Author</label>
                       @Html.TextBoxFor(x => x.Author, new { @class = "form-control", placeholder = "Enter book author" })
                   </div>

                   <div class="form-group">
                       <label>Publisher</label>
                       @Html.TextBoxFor(x => x.Publisher, new { @class = "form-control", placeholder = "Enter book publisher" })
                   </div>


                   <div class="d-flex justify-content-end">
                       <button type="submit" class="btn btn-primary" href="">Save</button>
                   </div>

               }

           </div>
       </div>
    </div>
</div>
